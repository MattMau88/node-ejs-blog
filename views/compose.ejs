<%- include('partials/header'); -%>

<h1>Compose</h1>
<form class="item" action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label>
    <input type="text" class="form-control" id="postTitle" name="newPostTitle" placeholder="Enter Post Ttitle ..." autocomplete="off">
  </div>
  <div class="form-group">
    <label for="postContent">Post</label>
    <textarea class="form-control" id="postContent" name="newPostContent" placeholder="Enter Post Content ..." autocomplete="off" rows="5" cols="30"></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="postBtn" value="">Publish</button>
</form>

<%- include('partials/footer'); -%>
