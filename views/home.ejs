<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= homeInput %></p>

<div class="blog">
  <% allPosts.forEach(function(post) { %>
    <div class="post">
      <h2><%=post.postTitle%></h2>
      <p>
        <%=post.postContent.substring(0, 100) + " ..."%>
        <a href="/posts/<%= post.postTitle%>">Read more</a>
      </p>
    </div>
  <% }) %>
</div>

<%- include('partials/footer'); -%>
